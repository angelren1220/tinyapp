<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/register">Register</a>
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div class="user-information">
      <% if (email) { %>
        <form class="form-inline" action="/logout" method="POST">
        <label for="email">Logined as <%= email %></label>
        <div class="form-group mx-auto">
          <button type="submit" class="btn btn-primary">Logout</button>
        </div>
      </form>
      <% } else { %> 
      <form class="form-inline" action="/login" method="POST">
      <div class="form-group mx-auto">
        <label for="email"></label>
        <input
          class="form-control"
          type="email"
          name="email"
          placeholder="example@mail.com"
          style="width: 300px; margin: 1em"
        />
        <button type="submit" class="btn btn-primary">Login</button>
      </div>
      </form>
      <% } %>
    </div>
  </nav>
</header>